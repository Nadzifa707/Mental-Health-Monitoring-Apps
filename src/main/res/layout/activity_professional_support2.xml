<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".ProfessionalSupport2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:text="You're In Luck!"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textviewcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:text="We found some people on your support list contact that may can help you. Let's let them know so they can might help you."
                android:textSize="18sp" />

            <ListView
                android:id="@+id/supportlist"
                android:layout_width="match_parent"
                android:layout_height="357dp"
                android:padding="20dp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="27dp"
                android:layout_marginBottom="20dp"
                android:onClick="sendsupport"
                android:padding="10dp"
                android:text="Send Support" />

            <Button
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="27dp"
                android:onClick="backToMenu"
                android:padding="10dp"
                android:text="Back to Main Menu" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>